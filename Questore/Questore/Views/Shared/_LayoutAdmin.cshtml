<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Questore</title>
    <link rel="stylesheet" href="/assets/styles/app.css" asp-append-version="true" />
</head>
<body>
<div class="container">
    <div class="container center shadow">
        <div class="menu-container">
            <div class="inner-menu-container admin">
                <img class="avatar-image" src="assets/avatars/avatar2.png"/>
                <div class="details-wrapper-side-menu">
                    <div class="name">Name Surname</div>
                    <div class="role">Administrator</div>
                </div>
            </div>
            <div class="inner-menu-container list">
                <a href="student-view.html" class="single-menu-container">
                    <img class="symbol icon" src="assets/icons/student.png"/>
                    <img class="symbol active-icon" src="assets/icons/student-active.png"/>
                    <div class="singe-menu-name">students</div>
                </a>
                <a href="mentor-view.html" class="single-menu-container active-side">
                    <img class="symbol icon" src="assets/icons/duck.png"/>
                    <img class="symbol active-icon" src="assets/icons/duck-active.png"/>
                    <div class="singe-menu-name">mentors</div>
                </a>
                <a href="shop-view.html" class="single-menu-container">
                    <img class="symbol icon" src="assets/icons/animals.png"/>
                    <img class="symbol active-icon" src="assets/icons/animals-active.png"/>
                    <div class="singe-menu-name">artifacts</div>
                </a>
                <a href="quest-view.html" class="single-menu-container">
                    <img class="symbol icon" src="assets/icons/king.png"/>
                    <img class="symbol active-icon" src="assets/icons/king-active.png"/>
                    <div class="singe-menu-name">quests</div>
                </a>
                <a href="class-view.html" class="single-menu-container">
                    <img class="symbol icon" src="assets/icons/web.png"/>
                    <img class="symbol active-icon" src="assets/icons/web-active.png"/>
                    <div class="singe-menu-name">classes</div>
                </a>
                <a href="team-view.html" class="single-menu-container">
                    <img class="symbol icon" src="assets/icons/quaver.png"/>
                    <img class="symbol active-icon" src="assets/icons/quaver-active.png"/>
                    <div class="singe-menu-name">teams</div>
                </a>
                <a href="experience-view.html" class="single-menu-container">
                    <img class="symbol icon" src="assets/icons/guest-star.png"/>
                    <img class="symbol active-icon" src="assets/icons/guest-star-active.png"/>
                    <div class="singe-menu-name">experience</div>
                </a>

            </div>
        </div>
    </div>
    <div class="view">
        @RenderBody()
    </div>
</div>
</body>
</html>