@{
    ViewData["Title"] = "Index";
}

@section Scripts {
    <script type="text/javascript" src="~/assets/scripts/addDetail.js" defer></script>
}

@model Profile

<div style="max-width: 840px; margin: auto">

    <partial name="_StudentTopDetails" model="Model.Student" />

    <div class="information-container container-shadow upper-margin">

        <div class="information-title">
            Details
            <img class="edit-toggle-button" id="add-button" src="../assets/buttons/add-button.png" />
        </div>

        <div class="input-container">
            @foreach (var detail in Model.Student.Details)
            {
                <partial name="_StudentDetail" model="detail" />
            }
        </div>
    </div>

    <div class="item-container upper-margin">

        <div class="item-inner-container item-inner-container-profile container-shadow">
            <div class="item-title title-1">artifacts</div>

            @foreach (var studentArtifact in Model.Student.Artifacts)
            {
                <partial name="_StudentArtifact" model="studentArtifact" />
            }

        </div>

        <div class="item-inner-container item-inner-container-profile container-shadow">
            <div class="item-title title-2">classes</div>

            @foreach (var studentClass in Model.Student.Classes)
            {
                <partial name="_StudentClass" model="studentClass" />
            }

        </div>

        <div class="item-inner-container item-inner-container-profile container-shadow margin-right-zero">
            <div class="item-title title-3">teams</div>

            @foreach (var studentTeam in Model.Student.Teams)
            {
                <partial name="_StudentTeam" model="studentTeam" />
            }

        </div>
    </div>
</div>

@{
    Model.Detail ??= new DetailDto { StudentId = Model.Student.Id };
}

<div id="backdrop"></div>
<div class="modal card" id="add-modal">
    <form asp-action="AddDetail" method="post">
        <div class="modal__content">
            <div asp-validation-summary="All" class="font-red"></div>
            <label asp-for="Detail.Name" class="label-style"></label>
            <input asp-for="Detail.Name" type="text" />
            <label asp-for="Detail.Content" class="label-style"></label>
            <input asp-for="Detail.Content" type="text" />
        </div>
        <div class="modal__actions">
            <input type="submit" id="add" value="add" class="button green-btn" />
        </div>
    </form>
    <button id="cancel" class="button yellow-btn">cancel</button>
</div>



