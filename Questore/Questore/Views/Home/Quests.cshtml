@model List<Quest>

    <div class="view">
        <div class="elements-list">
            <h2 class="blue">Basic Quests</h2>
            <div class="artifact-container">
                @foreach (var quest in @Model)
                {
                    @if (quest.Category.Name == "Basic")
                    {
                        <partial name="_Quest" model="quest" />
                    }
                }
            </div>
        </div>
        <div class="elements-list">
            <h2 class="green">Extra Quests</h2>
            <div class="artifact-container">
                @foreach (var quest in @Model)
                {
                    @if (quest.Category.Name == "Extra")
                    {
                        <partial name="_Quest" model="quest" />
                    }
                }
            </div>
        </div>

    </div>