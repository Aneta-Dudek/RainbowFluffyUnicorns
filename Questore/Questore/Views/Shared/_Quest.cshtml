@model Quest

<div class="artifact">
    <div class="left">
        <img class="artifact-img" src="../assets/images/quests/@Model.ImageUrl">
    </div>
    <div class="right center-text half">
        <h3 class="no-margin">@Model.Name</h3>
        <p>@Model.Description</p>
        <p>@Model.Reward stars</p>
        <button class="tiny green-btn">claim ★</button>
    </div>
</div>