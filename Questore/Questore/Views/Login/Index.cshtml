
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-page">
    <div class="login-header">

        QUESTSTORE

    </div>
    <div class="login-form">
        <div class="form-container form-big">
            <form action="../views/shop-view.html" class="form-grid">

                <div class="form-header full-width">Login</div>
                <p class="full-width form-element">
                    <label for="email" class="form-label">E-mail</label>
                    <input type="email" id="email" name="email" class="form-input" value="" required>
                </p>
                <p class="full-width form-element">
                    <label for="pass" class="form-label">Password</label>
                    <input type="password" id="pass" name="pass" class="password form-input" value="" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                           title="Must contain at least one  number and one uppercase and lowercase letter, and at least 8 or more characters" autocomplete="new-password" required>
                </p>
                <!--<div id="includedContent"></div>-->
                <input type="submit" name="login" class="form-button" value="login">
                <input type="button" name="register" class="form-button" value="register" onclick="window.location='register-page.html';">

            </form>
        </div>
    </div>
</div>

