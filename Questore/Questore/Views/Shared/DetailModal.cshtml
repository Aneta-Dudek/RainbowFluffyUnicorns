@model Profile

<div id="backdrop"></div>
<div class="modal card" id="add-modal">
    <form asp-action="AddDetail" method="post">
        <div class="modal__content">
            <div asp-validation-summary="All" class="font-red"></div>
            <label asp-for="Detail.Name" class="label-style"></label>
            <input asp-for="Detail.Name" type="text" />
            <label asp-for="Detail.Content" class="label-style"></label>
            <input asp-for="Detail.Content" type="text" />
        </div>
        <div class="modal__actions">
            <input type="submit" id="add" value="add" class="button green-btn" />
        </div>
    </form>
    <button id="cancel" class="button yellow-btn">cancel</button>
</div>